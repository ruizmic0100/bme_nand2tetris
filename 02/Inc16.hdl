/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
   // Just increment the input by 1 by adding 1 to the LSB.
   Add16(a=in, b[0]=true, out=out);
}